@article{ ISI:000434479300005,
Author = {Logofet, D. O. and Maslov, A. A.},
Title = {{Analyzing the fine-scale dynamics of two dominant species in a
   Polytrichum-Myrtillus pine forest. II. Inhomogeneous Markov chain and
   the averaged indices}},
Journal = {{ZHURNAL OBSHCHEI BIOLOGII}},
Year = {{2018}},
Volume = {{79}},
Number = {{2}},
Pages = {{135-147}},
Month = {{MAR-APR}},
Abstract = {{Based on the data of six repeated observations in a Polytrichum-type
   Scots pine forest, a non-autonomous Markov model is constructed for the
   fine-scale dynamics of two dominant species (Vaccinium myrtillus and V.
   vitis-idaea) at the late stages of post-fire succession. The model
   consists of five transition matrices depending on the year of
   observation, while their average matrix results in a homogeneous model.
   The experiment design features a large sample size (2000 quadrats x 6
   observations) on permanent transects, a 5-year re-examination interval,
   and the use of species rooted frequency on the 20 x 20 cm quadrats
   during 25 years.
   As a model of how the species change each other on the quadrats, the
   discrete Markov chain has the following four states: both species being
   absent on the quadrat, one of them being present alone, and the joint
   presence of the both; the model time step coincides with the interval
   between counts. The data enable us to uniquely calibrate the transition
   matrix for each pair of successive observations and to obtain, by the
   formulae of finite Markov chain theory, the vectors of steady-state
   square distributions for each of the five temporal transitions.
   We have shown that fluctuations in the species rooted frequency between
   observations do affect the value of certain entries to the transition
   matrices, hence of the corresponding (to the particular pair of
   observations) steady-state vector components, but do not change
   principally the conclusion on the dominating states of the quadrats.
   The geometric mean of five transition matrices provides for spatial and
   temporal characteristics of the process over the whole observation
   period. We have shown that the stable terminal outcome of species
   dynamics is expected to be the distribution of quadrats among the states
   such that 37\% of the sites will be occupied only by V myrtillus alone,
   11\% by V vitis-idaea alone, both species will be present on 38\% of the
   quadrats, and 14\% of quadrats will be ``empty{''}. It is shown for the
   first time that the share of V. vitis-idaea alone quadrats decreases
   markedly in the course of succession, but increases the share of
   quadrats where both species grow together.
   The average characteristics of cyclicity and stage duration in the
   fine-scale dynamics enable us to estimate the total duration of
   secondary post-fire succession at 46-50 years (with reaching a state
   close to the terminal one). Of the four states described, the V
   vitis-idaea alone quadrats have the smallest average lifetime (9 years)
   and the V. myrtillus + V. vitis-idaea quadrats have the largest (18
   years), which is partly explained by the different lifetimes of shoots
   in the corresponding species.}},
ISSN = {{0044-4596}},
Unique-ID = {{ISI:000434479300005}},
}

@article{ ISI:000280771900001,
Author = {O'Connor, T. G. and Kuyler, P. and Kirkman, K. P. and Corcoran, B.},
Title = {{Which grazing management practices are most appropriate for maintaining
   biodiversity in South African grassland?}},
