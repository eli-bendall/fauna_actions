@inproceedings{ ISI:000083508200015,
Author = {Shriver, WG and Vickery, PD and Perkins, DW},
Editor = {{Vickery, PD and Herkert, JR}},
Title = {{The effects of summer burns on breeding Florida Grasshopper and
   Bachman's Sparrows}},
Booktitle = {{ECOLOGY AND CONSERVATION OF GRASSLAND BIRDS OF THE WESTERN HEMISPHERE}},
Series = {{STUDIES IN AVIAN BIOLOGY-SERIES}},
