@inproceedings{ ISI:000226974200028,
Author = {Chan-McLeod, AA and Bunnell, F},
Editor = {{Shore, TL and Brooks, JE and Stone, JE}},
Title = {{Potential approaches to integrating silvicultural control of mountain
   pine beetle with wildlife and sustainable management objectives}},
Booktitle = {{MOUNTAIN PINE BEETLE SYMPOSIUM: CHALLENGES AND SOLUTIONS}},
