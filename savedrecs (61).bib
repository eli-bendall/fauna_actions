@inproceedings{ ISI:000083508200026,
Author = {Petersen, KL and Best, LB},
Editor = {{Vickery, PD and Herkert, JR}},
Title = {{Design and duration of perturbation experiments: Implications for data
   interpretation}},
Booktitle = {{ECOLOGY AND CONSERVATION OF GRASSLAND BIRDS OF THE WESTERN HEMISPHERE}},
