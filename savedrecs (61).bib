@article{ ISI:000240794500009,
Author = {Liddle, David T. and Brook, Barry W. and Matthews, Janet and Taylor,
   Stephen M. and Caley, Peter},
Title = {{Threat and response: A decade of decline in a regionally endangered
   rainforest palm affected by fire and introduced animals}},
