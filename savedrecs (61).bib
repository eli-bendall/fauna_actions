@article{ ISI:000435816100012,
Author = {Hileman, Eric T. and King, Richard B. and Faust, Lisa J.},
Title = {{Eastern massasauga demography and extinction risk under prescribed-fire
   scenarios}},
Journal = {{JOURNAL OF WILDLIFE MANAGEMENT}},
Year = {{2018}},
Volume = {{82}},
Number = {{5}},
Pages = {{977-990}},
Month = {{JUL}},
Abstract = {{The use of poorly estimated or surrogate population parameter estimates
   to assess population viability may result in misleading predictions.
   Consequently, a critical first step to understanding population health
   and the effects of land management practices on threatened species is
   estimation of site-specific demographic parameters. A major threat to
   the eastern massasauga (Sistrurus catenatus) is habitat loss due to
