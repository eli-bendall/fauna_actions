@article{ ISI:A1996VE01600009,
Author = {Comparatore, VM and Martinez, MM and Vassallo, AI and Barg, M and
   Isacch, JP},
Title = {{Abundance and relationships with the habitat of birds and mammals in
   Paspalum-quadrifarium grasslands managed by fire (Buenos-Aires Province,
   Argentina)}},
Journal = {{INTERCIENCIA}},
Year = {{1996}},
Volume = {{21}},
Number = {{4}},
Pages = {{228-237}},
Month = {{JUL-AUG}},
Abstract = {{A survey of birds and mammals in Paspalum quadrifarium grasslands
   managed with fire, located in Beunos Aires Province, Argentina, was
   performed. Relative abundances of birds and micromammals, their habitat
   relations and fire effects, were studied with the aim of providing
   information for a sustainable management of this ecosystem. The study
   area has a sustainable management of this ecosystem. The study area had
   a patchy structure, constituted by three principal habitats: tall-grass
   (mostly P. quadrifarium), short-grass (Distichlis sp., Botriochloa sp.,
   Stenotaphrum sp., Stipa sp. y Mentha sp.) and marsh (Solanum sp.).
   Thirty five of the 39 bird species registered in these grasslands,
   mainly were found in habitats where p. quadrifarium was predominant.
   Thirteen of these species showed a strong dependence on P. quadrifarium
   for food, refuge and nesting requirements mainly (Spartonica maluroides,
   Asthenes hudsoni, Cranioleuca sulphurifera y Cistothorus platensis).
   Fifteen mammals species were registered. Among micormammals, 3 rodents
   (Oxymyxterus rutilans, Oryzomys flavescens, Akodon azarae) and the small
   opossum Monodelphis dimidiata were the more strongly related to the P.
   quadrifarium grassland. A preliminary account of the effects of grazing
   after fire, in an experimentally burned area, showed an absence of
   micromammal captures and a replacement of bird species linked to P.
   quadrifarium by species that prefer short grasslands (Vanellus
   chilensis, Milvago chimango, Anthus correndera). Finally, we emphasize
   the importance of considering the fauna in the management of this
   agroecosystem.}},
ISSN = {{0378-1844}},
Unique-ID = {{ISI:A1996VE01600009}},
}

@article{ ISI:000379166900018,
Author = {Campbell, Monica L. and Keith, David A. and Clarke, Peter J.},
Title = {{Regulation of seedling recruitment and survival in diverse ecotonal
   temperate forest understories}},
Journal = {{PLANT ECOLOGY}},
Year = {{2016}},
Volume = {{217}},
Number = {{6}},
Pages = {{801-816}},
Month = {{JUN}},
Abstract = {{Fire is an important factor driving the position and stability of
   ecotones between fire-prone and less flammable forest types. To better
   understand, the recruitment processes that mediate plant persistence in
   ecotonal systems, we used manipulative field experiments in Australian
   wet eucalypt forests to investigate factors that may be regulating
   seedling recruitment and survival in burnt and unburnt forest. We found
   no evidence that safe sites from predators or exposure regulated
   seedling recruitment in three of the four study species, but one species
   associated with less flammable rainforest systems had increased
   germination rates in response to soil scarification. Seedlings of all
   four study species experienced higher rates of mortality resulting from
   herbivory or water stress in the post-fire environment. We found that
   intact ground cover increased seedling survival by reducing exposure to
   dessicating conditions and providing refuge from vertebrate herbivores.
   Our results suggest that shrubs associated with mesic, low-flammability
   forests have fewer opportunities for recruitment with desiccation risks
   in post-fire environments limiting seedling survival. In contrast,
   shrubs associated with high-flammability forests were capable of
   recruiting and surviving in both burnt and unburnt forests. Post-fire
   recruitment is likely to be more abundant after fire than at other
   times, but we found that survival can be highly constrained by post-fire
   herbivory. The ability of these species to recruit in undisturbed
   conditions provides some insurance against recruitment failure under
   stochastic variation in herbivory and desiccating conditions. The
   capacity to spread risks could be important in maintaining boundary
   position and diversity in these ecotonal systems.}},
DOI = {{10.1007/s11258-016-0613-x}},
