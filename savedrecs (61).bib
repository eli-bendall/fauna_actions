@article{ ISI:000079842800003,
Author = {Hadjisterkotis, E},
Title = {{Dangers facing the Cyprus mouflon from being one population in one
   reserve}},
Journal = {{ZEITSCHRIFT FUR JAGDWISSENSCHAFT}},
Year = {{1999}},
Volume = {{45}},
Number = {{1}},
Pages = {{27-34}},
Month = {{MAR}},
Abstract = {{The Cyprus mouflon is an endangered species inhabiting Cyprus' Paphos
   forest on an area of 620 km(2). There is only one population of this
   subspecies in a single reserve which is threatened by habitat
   degradation, forest fires and diseases transmitted by domestic sheep
   foraging in the same area as the mouflon. During the last decades, the
   climate of Cyprus has become warmer and drier. Water has been pumped
   from Paphos forest for irrigation purposes, draining many artesian
   springs which were providing water for the mouflon. Lack of water in
   combination with lack of forage inside the forest is driving the mouflon
   outside the forest and bringing them into contact with domestic sheep
   and goats, which might be infected with scrapie and pulmonary
   adenomatosis. So far, no mouflon were found to be infected with these
   diseases, but transmission is possible. In July 1998, a fire originating
   in the agricultural area invaded Paphos forest in three separate places.
   This paper presents the measures taken to protect the mouflon from water
   shortages, wildfires and diseases. I also suggest conservation measures.}},
