@article{ ISI:000350941500005,
Author = {McLean, Christopher M. and Bradstock, Ross and Price, Owen and Kavanagh,
   Rodney P.},
Title = {{Tree hollows and forest stand structure in Australian warm temperate
   Eucalyptus forests are adversely affected by logging more than wildfire}},
Journal = {{FOREST ECOLOGY AND MANAGEMENT}},
Year = {{2015}},
Volume = {{341}},
Pages = {{37-44}},
Month = {{APR 1}},
Abstract = {{Ecologically sustainable forest management aims to maintain biodiversity
   values within managed forest ecosystems. A key habitat component within
   Australian forest ecosystems are hollow-bearing trees which are
   crucially important for fauna species requiring tree hollows for diurnal
   shelter and nesting. The effect of disturbance regimes, in particular
   logging and fire, on hollow dynamics is poorly understood. The aim of
   this study was to determine the relationships between logging intensity
   and fire frequency on hollow abundance and forest stand structural
   attributes in two different eastern Australian Eucalyptus forest types.
   We found that average stand tree diameter at breast height was
   negatively correlated to logging intensity. Logging intensity was
   negatively correlated with tree diameter at breast height (DBH), and the
   density of both hollow-bearing trees and hollows. Losses of
   hollow-bearing trees and hollows occurred through an interaction between
   logging intensity and fire frequency, resulting in an absence of
