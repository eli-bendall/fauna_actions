@article{ ISI:000314270400003,
Author = {Rosa Garcia, Rocio and Fraser, Mariecia D. and Celaya, Rafael and Mendes
   Ferreira, Luis Miguel and Garcia, Urcesino and Osoro, Koldo},
Title = {{Grazing land management and biodiversity in the Atlantic European
   heathlands: a review}},
