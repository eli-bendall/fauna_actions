@article{ ISI:000466949500001,
Author = {Ogden, Sarah and Haukos, Avid A. and Olson, K. C. and Lemmon, Jack and
   Alexander, Jonathan and Gatson, Garth A. and Fick, Walter H.},
Title = {{Grassland Bird and Butterfly Responses to Sericea Lespedeza Control via
   Late-Season Grazing Pressure}},
Journal = {{AMERICAN MIDLAND NATURALIST}},
Year = {{2019}},
Volume = {{181}},
Number = {{2}},
Pages = {{147-169}},
Month = {{APR}},
Abstract = {{Sericea lespedeza (Lespedeza cuneata) is a high-tannin, late season
   invasive forb species that reduces biodiversity in tallgrass prairie
   ecosystems. The largest tallgrass prairie remnant exists in the Flint
   Hills of Kansas and Oklahoma, where the most common grazing management
   practice involves prescribed fire in early spring followed by intensive
   stocking with yearling beef cattle from April to July. Sericea has
   continued to spread under this management regime. From 2013 to 2016, in
   Kansas Flint Hills tallgrass prairie, we tested the effects of using
   spring burning with early-season steer grazing, followed by late-season
   sheep grazing (Steer-I-Sheep) compared to spring burning followed by
   steer grazing only (Steer) on sericea vigor, grassland birds, and
   pollinators. Density and nest success of Grasshopper Sparrows
   (Ammodrannts savannarum) and Eastern Meadowlarks (Sturnella magna) were
   not negatively affected by Steer-I-Sheep relative to Steer treatments,
   whereas there was evidence of a negative effect in these same metrics
   for Dickcissels (Spiro americana). Abundance of butterflies and their
   nectar sources were similar between treatments but abundance of
   grassland specialist butterfly species was low, overall.
   Comprehensively, Steer-I-Sheep effectively controls the spread of
   sericea but may not create habitat for all tallgrass prairie wildlife
   species.}},
DOI = {{10.1674/0003-0031-181.2.147}},
